{
    "name": "square360/pantheon-github-workflows",
    "description": "Square360 standardized GitHub Actions workflows for Pantheon deployments",
    "type": "composer-plugin",
    "license": "MIT",
    "keywords": [
        "drupal",
        "pantheon",
        "github-actions",
        "workflows",
        "deployment",
        "composer-plugin"
    ],
    "authors": [
        {
            "name": "Square360",
            "email": "dev@square360.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "composer-plugin-api": "^2.0"
    },
    "require-dev": {
        "composer/composer": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Square360\\PantheonWorkflows\\": "workflow-configuration/scripts/"
        }
    },
    "extra": {
        "class": "Square360\\PantheonWorkflows\\ComposerPlugin"
    },
    "scripts": {
        "post-install-cmd": [
            "Square360\\PantheonWorkflows\\ComposerScripts::postInstall"
        ],
        "post-update-cmd": [
            "Square360\\PantheonWorkflows\\ComposerScripts::postUpdate"
        ]
    },
    "config": {
        "allow-plugins": {
            "square360/pantheon-github-workflows": true
        }
    }
}